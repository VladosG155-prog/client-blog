{
  "extends": ["next/core-web-vitals", "plugin:prettier/recommended"],
  "plugins": ["simple-import-sort"],
  "parserOptions": {
    "project": ["./tsconfig.json"]
  },
  "overrides": [
    {
      "files": ["*.js", "*.jsx", "*.ts", "*.tsx"],
      "rules": {
        "simple-import-sort/imports": [
          "error",
          {
            "groups": [
              ["^\\u0000"],
              ["^react$", "^@?\\w"],
              ["^@", "^"],
              ["^\\./"],
              ["^.+\\.(module.css|module.scss|.scss)$"],
              ["^.+\\.(gif|png|svg|jpg)$"]
            ]
          }
        ]
      }
    }
  ]
}
